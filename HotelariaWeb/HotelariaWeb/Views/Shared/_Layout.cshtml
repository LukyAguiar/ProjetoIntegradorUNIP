<!DOCTYPE html>
<html lang="pt-br">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelariaWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelariaWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow">
            <div class="container-fluid">

                <a class="navbar-brand display-3" asp-area="" asp-controller="Home" asp-action="Index"><b>BIG HOTEL</b></a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

             

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link pt-3 pb-3" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-h-square"></i> Hotel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link pt-3 pb-3" asp-area="" asp-controller="Home" asp-action=""><i class="far fa-image"></i> Galeria</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link pt-3 pb-3" asp-area="" asp-controller="Home" asp-action=""><i class="fas fa-bed"></i> Reservas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link pt-3 pb-3" asp-area="" asp-controller="Home" asp-action=""><i class="fas fa-envelope-open-text"></i> Contato</a>
                        </li>
                    </ul>         
                </div>
                  <div class="navbar d-sm-inline-flex justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <button class="btn btn-primary"><i class="fas fa-user-plus"></i> Registrar</button>
                                <button class="btn btn-success"><i class="fas fa-user"></i> Entrar</button>
                            </li>
                        </ul>
                    </div>
            </div>
        </nav>
    </header>

    <div class="">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark mt-5">
        <div class="container">
            <div class="row">

                <div class="col-md-4 text-white text-center">
                    <div>
                     <h4 class="pt-3">BIG HOTEL</h4>
                      <p class="p">&copy; Todos os direitos reservados</p>
                    </div>
                </div>

                 <div class="col-md-4 text-white text-center">
                    <div>
                        <h4 class="pt-3 ">Redes Sociais</h4>
                        <div class="row">
                            <div class="col-md-12">
                                <i class="fab fa-instagram fs-3"></i>
                                <i class="fab fa-twitter-square fs-3"></i>
                                <i class="fab fa-facebook-square fs-3"></i>
                            </div>
                        </div>
                    </div>
                 </div>

                 <div class="col-md-4 text-white text-center">
                    <div>
                     <h4 class="pt-3">Localização</h4>
                     <div class="row">
                         <div class="col-md-12">
                             <p>SÃO PAULO | CEP: XX-XXX-XX </p>
                         </div>
                     </div>
                    </div>
                </div>

            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
